<% if(user.role === "user"){ %>



<form action="/editProfileUser" method="POST" onSubmit="return validateForm();" class='form form--edit-user'>
  <h4 class="form__title">Create a volunteer account</h4>

  <label for='age' class="form__label">
    <span>Age</span>
  </label>
  <input type="number" id="age" name="age" class="form__input"/>

  <label for="country" class='form__label'>
    <span>Country</span>
  </label>
  <input type="text" id="country" name="country" class="form__input"/>


  <label for='email' class="form__label">
    <span>Email</span>
  </label>
  <input type="email" id="email" name="email" class="form__input"/>

  <label for='phone' class="form__label">
    <span>Phone</span>
  </label>
  <input type="tel" id="phone" name="phone" class="form__input"/>

  <label for='occupation' class="form__label">
    <span>Occupation</span>
  </label>
  <input type="text" id="occupation" name="phone" class="form__input"/>

  <label for='bio' class="form__label">
    <span>Mini Biography</span>
  </label>
  <textarea id='bio' class="form__textarea" name='bio'></textarea>

  <section>
    <h6>Upload your photo</h6>
    <form action="/upload" method="post" enctype="multipart/form-data">
      <input type="text" name="name">
      <input type="file" name="photo">
      <input type="submit" value="Save">
    </form>
  </section>



  <section class="form-group checkbox-group">
    <p>I am willing to</p>

    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-0" name="activity0">
      <label for='activity-0' class="form__label">Help with Shopping</label>
    </div>
    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-1" name="activity1">
      <label for='activity-1' class="form__label">Entertain: I can sing, dance, and make you laugh!</label>
    </div>
    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-2" name="activity2">
      <label for='activity-2' class="form__label">Reading</label>
    </div>
    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-3" name="activity3">
      <label for='activity-3' class="form__label">Help with cleaning</label>
    </div>
    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-4" name="activity4">
      <label for='activity-4' class="form__label">Help with cooking</label>
    </div>
    <div>
      <input type="checkbox" class="form__input form__input--checkbox" id="activity-5" name="activity5">
      <label for='activity-5' class="form__label">Help out with making phone calls, writting letters</label>
    </div>
  </section>
  <p class="agree">By clicking the button below, you agree to the Elder Helpers</p>

  <button class="button" type="submit">Volunteer!</button>


</form>


<% } else { %>

 <form action="/editProfileUser" method="POST" onSubmit="return validateForm();" class='form form--edit-user'>

  <h4 class="form__title">Find volunteers where you need help</h4>

  <label for='Address' class="form__label">
  <span>Address</span>
  </label>
  <input id="addres" type="text">
  <input id="latitude" type="text" name="latitude" placeholder="Latitude" >
  <input id="longitude" type="text" name="longitude" placeholder="Longitude">

  <label for='contact' class="form__label">
    <span>Contact Person</span>
  </label>
  <input type="text" id="contact" name="contact" class="form__input"/>

  <label for='contact-phone' class="form__label">
    <span>Contact Person's phone number</span>
  </label>
  <input type="tel" id="contact-phone" name="contact-phone" class="form__input"/>

  <label for='needs' class="form__label">
    <span>Areas of need</span>
  </label>

  <textarea id='needs' class="form__textarea" name='needs'></textarea>

  <p class="agree">By clicking the button below, you agree to the Elder Helpers</p>
  <button type="submit">Sign up</button>
</form>

<% } %>

<!-- input tel js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.1.2/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.1.2/js/utils.js"></script>
    <script src="js/countrySelect.min.js"></script>
    <script type="text/javascript">
      $("#phone").intlTelInput();
      $("#country").countrySelect();
    </script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">
  $("#profileImage").click(function(e) {
    $("#imageUpload").click();
});
</script>
