<% if(user.role === "user"){ %>

  <h1 class="welcome-msg">Welcome <%= user.fullname %> !</h1>

  <img src="<%= user.imageUrl %>">

  <p class="user-info-title"><%= user.fullname %>'s information:</p>
  <p class="user-info"> Age: <%= user.age %> </p>
  <p class="user-info"> Country: <%= user.country %> </p>
  <p class="user-info"> Phone: <%= user.phone %> </p>
  <p class="user-info"> Occupation: <%= user.occupation %> </p>
  <p class="user-info"> Mini Biography: <%= user.bio %> </p>

  <div><button class="btn"><a href="http://localhost:3000/editProfileUser/<%=user._id %>">Edit your profile</a></button></div>


<% } else{ %>

   <h1 class="welcome-msg">Welcome <%= user.fullname %> !</h1>

   <p class="user-info-title"><%= user.fullname %>'s information:</p>
   <p class="user-info"> Contact Person: <%= user.contact %> </p>
   <p class="user-info"> Contact Person's phone number: <%= user.phone %> </p>
   <p class="user-info"> Areas of need: <%= user.needs %> </p>

  <div><button class="btn"><a href="http://localhost:3000/editProfileUser/<%= user._id %>">Edit your profile</a></button></div>

  <div><button class="btn"><a href="http://localhost:3000/volunteersDatabase">See available volunteers</a></button></div>

<% } %>



